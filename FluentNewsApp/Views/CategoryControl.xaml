<UserControl x:Class="FluentNewsApp.Views.CategoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FluentNewsApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate x:Key="ArticleTemplate">
            <StackPanel Margin="5">
                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16"/>
                <TextBlock Text="{Binding Published}" FontSize="12" Margin="0,5,0,0"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="{Binding Path=Category, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="20" HorizontalAlignment="Center" Margin="10" Grid.Row="0"/>
        <ListView ItemsSource="{Binding Path=Articles, RelativeSource={RelativeSource AncestorType=UserControl}}" ItemTemplate="{StaticResource ArticleTemplate}" Grid.Row="1"/>
    </Grid>
</UserControl>
