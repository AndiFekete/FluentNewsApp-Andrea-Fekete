<UserControl x:Class="FluentNewsApp.Views.CategoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FluentNewsApp.Views" 
             xmlns:converters="clr-namespace:FluentNewsApp.Views.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate x:Key="ArticleTemplate">
            <StackPanel Margin="5">
                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16"/>
                <TextBlock Text="{Binding Published}" FontSize="12" Margin="0,5,0,0"/>
            </StackPanel>
        </DataTemplate>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BooleanToInverseVisibilityConverter x:Key="BooleanToInverseVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="{Binding Path=Category, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="20" HorizontalAlignment="Center" Margin="10" Grid.Row="0"/>
        <ListView ItemsSource="{Binding Path=Articles, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                  ItemTemplate="{StaticResource ArticleTemplate}" Visibility="{Binding Path=HasError, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToInverseVisibilityConverter}}"
                  Grid.Row="1"/>
        <TextBlock Text="Error loading articles :(" 
                   Visibility="{Binding Path=HasError, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}" 
                   Grid.Row="1"
                   Foreground="Red"
                   VerticalAlignment="Center"
                   TextAlignment="Center"
                   FontSize="16"/>

        <Grid x:Name="LoadingOverLay" Panel.ZIndex="1000" Visibility="{Binding Path=IsLoading, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}" Grid.RowSpan="2">
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity=".5"/>
            </Grid.Background>
            <TextBlock Text="Loading..." 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="24" 
                   Foreground="Blue"
                   Background="LightBlue"/>
        </Grid>
    </Grid>
</UserControl>
